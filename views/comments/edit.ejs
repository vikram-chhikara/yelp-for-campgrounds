<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center">Edit Comment</h1>
    <div style="width:35%; margin:20px auto" class="form-group">
        <form action="/campgrounds/<%= campground._id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="comment[text]" value="<%= comment.text%>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
        <a href="/">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>