<% include ../partials/header%>

<div class="container">
    <div class="row">
        <!-- add sidebar -->
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <div class ="list-group">
                <li class="list-group-item active">Item 1 </li>
                <li class="list-group-item" >Item 2</li>
                <li class="list-group-item" >Item 3</li>
            </div>
        </div>
        <div class=col-md-9>
            <div class="thumbnail">
                <img class = "img-responsive" src="<%= campground.image%>" alt="campground image">
                <div class="caption">
                    <h4 class = "pull-right">$18.99/night</h4>
                    <a href =  "/"><h4><%= campground.name%></h4></a>
                    <em>(Submitted by <%= campground.creator.creatorName%>)</em>
                    <p><%= campground.description%></p>
                    <%  if(currentUser && currentUser._id.equals(campground.creator.id)){%>
                    <a href = "/campgrounds/<%=campground._id %>/edit" class="btn btn-sm btn-info">Edit</a>
                    <form class="delete-form" action="/campgrounds/<%= campground._id%>?_method=DELETE" method="POST">
                        <button class = "btn btn-sm btn-danger">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="well"> <!-- Rounded corner and grey background-->
                <div class = "text-right">
                    <a href = "/campgrounds/<%= campground._id %>/comments/new" class= "btn btn-success">Add a comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username%></strong> 
                        <span class="pull-right">-21 days ago</span>
                        <p><%= comment.text%></p>
                        <% if(currentUser && currentUser._id.equals(comment.author.id)){%>
                        <a class = "btn btn-xs btn-warning" href = "/campgrounds/<%= campground._id%>/comments/<%=comment._id%>/edit">Edit</a>
                        <form class= "delete-form" action="/campgrounds/<%= campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                            <button class=" btn btn-xs btn-danger">Delete</button>
                        </form>
                        <% }%>
                    </div>
                </div>
            <% });%>
            </div>
        </div>
    </div>
</div>
    



<% include ../partials/footer%>