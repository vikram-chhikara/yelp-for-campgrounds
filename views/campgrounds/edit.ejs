<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center">Edit <%= campground.name%></h1>
    <div style="width:35%; margin:20px auto" class="form-group">
        <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="campground[name]" value="<%= campground.name%>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="campground[image]" value="<%= campground.image%>">
            </div>
            <div class="form-group">
                <textarea class="form-control" name="campground[description]" value="<%= campground.description%>"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
        <a href="/">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>